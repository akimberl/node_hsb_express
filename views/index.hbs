<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-10 col-md-10 col-lg-10">
      {{#unless user}}
      <h3>Welcome to The Best Auction Ever</h3>
      <p>For a start please signin or signup</p>
      {{/unless}}
      <ul>{{#each auctions}}
        <li>{{this.author.name}} is set auction for <a href="/auction/{{this._id}}">{{this.name}}</a></li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
